<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:First"
             x:Class="First.MainPage">

	<Label Text="{Binding Path=Word, Mode=TwoWay}"
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           FontSize="46"
           TextColor="Black"
           Margin="0, 20, 0, 0"
           />

    <Label Text="{Binding Path=CzWord, Mode=TwoWay}"
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           FontSize="Medium"
           TextColor="Gray"
           />

    <!-- I know button -->
    <Button Text="Start"
            FontSize="Large"
            BorderColor="Black"
            TextColor="Green"
            Margin="0, 30, 0, 0"
            WidthRequest="200"
            HeightRequest="80"
            Clicked="Button_Clicked"
            />

  <!-- I dont know button -->
  <Button Text="I dont know"
          FontSize="Large"
          BorderColor="Black"
          TextColor="Green"
          Margin="0, 30, 0, 0"
          WidthRequest="200"
          HeightRequest="80"
          Clicked="ButtonIDK_Clicked"
            />


</ContentPage>